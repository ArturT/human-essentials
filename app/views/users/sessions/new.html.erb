<%= render AuthenticationLayoutComponent.new(side_image_path: "auth-image.jpg") do %>

  <%= render ContentContainerComponent.new(title: "Welcome back!") do %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- Form -->
      <form>
        <div class="space-y-4">
          <div>
            <%= f.input :email %>
          </div>
          <div>
            <%= f.input :password %>
          </div>
        </div>

        <div class="flex items-center justify-between mt-6">
          <div class="mr-1">
            <%= link_to 'Forgot your password?', new_password_path(resource_name), class: "text-sm underline hover:no-underline" %>
          </div>
          <%= f.button :submit, "Sign in" %>
        </div>
      </form>
      <!-- Footer -->
      <div class="pt-5 mt-6 border-t border-slate-200">
        <div class="text-sm">
          Donâ€™t you have an account? <%= link_to "Sign Up", new_account_request_path, class: "font-medium text-indigo-500 hover:text-indigo-600" %>
        </div>
      </div>

      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do %>
        <img src="../img/btn_google_signin_dark_focus_web@2x.png" alt="Sign in with Google"/>
      <% end %>
    <% end %>
  <% end %>
<% end %>
