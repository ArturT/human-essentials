<%= render AuthenticationLayoutComponent.new(side_image_path: "auth-image.jpg") do %>

  <%= render ContentContainerComponent.new(title: "Reset your password", subtitle: "Forgot your password? No worries happens to all of us") do %>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>

      <!-- Form -->
      <form>
        <div class="space-y-4">
          <div>
            <%= f.input :email %>
          </div>
        </div>

        <div class="flex items-center justify-end mt-6">
          <%= f.button :submit, "Send me reset password instructions", class: "btn btn-info btn-block" %>
        </div>
      </form>
    <% end %>
  <% end %>
<% end %>
